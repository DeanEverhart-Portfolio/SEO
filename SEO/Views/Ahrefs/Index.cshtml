@model IEnumerable<SEO.Models.Ahref>

@{
    ViewData["Title"] = "Ahrefs";
}

<style>
    .row {
        display: grid;
        grid-template-columns: 1fr 1fr;
    }

    .form-container {
        grid-column-start: 2;
        justify-self: end;
    }
</style>

<div class="row">
    <div class="col-md-3">
        <h1>Ahrefs</h1>
    </div>
    <div class="col-md-9 form-container">
        <form action="/Ahref/upload" method="post" enctype="multipart/form-data">
            <label for="file">Upload a file:</label>
            <input type="file" id="file" name="file">
            <input type="submit" value="Submit">
        </form>
    </div>
</div>

<hr />

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.domain)
            </th>
            <th>
                Client
            </th>
            <th>
                @Html.DisplayNameFor(model => model.date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.value)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.stringValue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Domain)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.domain)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Domain.Contact.Company)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.value)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.stringValue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Domain.Id)
            </td>
            <td>
                <a href="@item.Domain.Website" target="_blank">
                    @Html.DisplayFor(modelItem => item.Domain.Name)
                </a>
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
